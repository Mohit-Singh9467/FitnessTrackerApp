@model FitnessApp.Models.Goal

@{
    ViewBag.Title = "Edit Goal";
}

<h2>Edit Goal</h2>

@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.GoalId)

        <div class="form-group">
        @Html.LabelFor(model => model.Name, "Goal Name")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div id="workouts-section">
            <h4>Associated Workouts</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Workout</th>
                        <th>Repetitions</th>
                        <th>Sets</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="workouts-table">
                @if (Model.Workouts != null && Model.Workouts.Any())
                {
                    foreach (var workout in Model.Workouts)
                    {
                                    <tr>
                                        <td>
                                            <select name="workoutIds" class="form-control">
                                                <option value="">-- Select Workout --</option>
                                    @foreach (var w in ViewBag.Workouts as List<FitnessApp.Models.Workout>)
                                    {
                                                        <option  value="@w.WorkoutId"  selected= "@(w.WorkoutId == workout.WorkoutId ? "selected" : "")">@w.Name</option> 
                                    }
                                            </select>
                                        </td>
                                        <td>
                                            <input type="number" name="repetitions" class="form-control" value="@workout.Repetitions" />
                                        </td>
                                        <td>
                                            <input type="number" name="sets" class="form-control" value="@workout.Sets" />
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger remove-workout">Remove</button>
                                        </td>
                                    </tr>
                    }
                }
                </tbody>
            </table>
            <button type="button" id="add-workout" class="btn btn-primary">Add Workout</button>
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-success">Save Changes</button>
}

@section Scripts {
        <script>
            $(document).ready(function () {
                // Add new workout row
                $('#add-workout').click(function () {
                    let workoutRow = `
                        <tr>
                            <td>
                                <select name="workoutIds" class="form-control">
                                    <option value="">-- Select Workout --</option>
        @foreach (var workout in ViewBag.Workouts as List<FitnessApp.Models.Workout>)
        {
                                            <option value="@workout.WorkoutId">@workout.Name</option>
        }
                                </select>
                            </td>
                            <td>
                                <input type="number" name="repetitions" class="form-control" />
                            </td>
                            <td>
                                <input type="number" name="sets" class="form-control" />
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger remove-workout">Remove</button>
                            </td>
                        </tr>`;
                    $('#workouts-table').append(workoutRow);
                });

                // Remove workout row
                $(document).on('click', '.remove-workout', function () {
                    $(this).closest('tr').remove();
                });
            });
        </script>
}
